#include <sys/types.h>
#include <stdio.h>
#include <unistd.h>
#include <sys/wait.h>
#include <stdlib.h>

int main() {

    int parent_pid = getpid();
    printf("Â¡Hola! Soy el proceso principal con PID: %d\n", parent_pid);

    pid_t pid;

    pid = fork();

    if (pid < 0) {
        fprintf(stderr, "Â¡Vaya! No pude crear un nuevo proceso.");
        exit(-1);
    } else if (pid == 0) {
        int kid_pid = getpid();
        printf("Â¿QuÃ© tal? Soy el hijo 1 con PID: %d\n", kid_pid);
        execlp("/bin/echo", "echo", "hola", NULL);
    }

    wait(NULL);

    pid = fork();

    if (pid < 0) {
        fprintf(stderr, "Â¡Uy! No pude crear otro proceso.");
        exit(-1);
    } else if (pid == 0) {
        int kid_kid_pid = getpid();
        printf("Â¡Hola de nuevo! Soy el hijo 2 con PID: %d\n", kid_kid_pid);
        execlp("/bin/ls", "ls", NULL);
    }

    wait(NULL);

    pid = fork();

    if (pid < 0) {
        fprintf(stderr, "FallÃ© una vez mÃ¡s.");
        exit(-1);
    } else if (pid == 0) {
        execlp("/bin/date", "date", NULL);
    }

    wait(NULL);

    pid = fork();

    if (pid < 0) {
        fprintf(stderr, "Â¡No otra vez! No pude duplicar.");
        exit(-1);
    } else if (pid == 0) {
        printf("Â¡Hola desde el Ãºltimo hijo! ðŸŒ\n");
        exit(0);
    }

    wait(NULL);

    printf("Todos mis peques han terminado. Â¡Hasta luego! âœŒï¸\n");
    return 0;
}
